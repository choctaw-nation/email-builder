{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "cno-email-blocks/text",
	"version": "1.0.0",
	"title": "Text",
	"category": "cno-email-blocks",
	"icon": "block-default",
	"description": "Add some text to your email.",
	"example": {},
	"supports": {
		"html": false,
		"className": false,
		"inserter": true,
		"splitting": true
	},
	"attributes": {
		"content": {
			"type": "string"
		},
		"lineHeight": {
			"type": "string",
			"default": "1.5"
		},
		"textTransform": {
			"type": "string",
			"enum": [ "lowercase", "uppercase", "none", "capitalize" ],
			"default": "none"
		},
		"fontFamily": {
			"type": "string"
		},
		"fontFamilyOverride": {
			"type": "string"
		},
		"fontSize": {
			"type": "string",
			"default": "16px"
		},
		"textAlign": {
			"type": "string",
			"enum": [ "left", "center", "right" ]
		},
		"color": {
			"type": "string",
			"default": "black"
		},
		"href": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "href",
			"role": "content"
		},
		"linkDestination": {
			"type": "string"
		},
		"linkTarget": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "target"
		},
		"rel": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "rel"
		},
		"margin": {
			"type": "object"
		},
		"parsedMargin": {
			"type": "object"
		}
	},
	"usesContext": [
		"cno-email-blocks/headingsFont",
		"cno-email-blocks/bodyFont",
		"cno-email-blocks/accentFont"
	],
	"ancestor": [ "cno-email-blocks/email-wrapper" ],
	"editorScript": "file:./index.tsx",
	"render": "file:./render.php"
}
